{
  "name": "snapfill",
  "version": "0.1.0",
  "description": "Figma plugin to populate designs with data from CSV/JSON and REST APIs",
  "scripts": {
    "build": "npm run build:plugin && npm run build:ui",
    "build:plugin": "tsc --project tsconfig.plugin.json",
    "build:ui": "vite build",
    "watch": "tsc --project tsconfig.plugin.json --watch",
    "dev": "concurrently \"npm run watch\" \"vite build --watch\"",
    "preview": "vite preview"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.90.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-singlefile": "^0.13.5"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "lucide-react": "^0.294.0",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
